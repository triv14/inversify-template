{
  "name": "inversify-template",
  "version": "1.0.0",
  "main": "index.ts",
  "repository": "https://github.com/benmar000/inversify-template.git",
  "author": "Ben Martinez <ben.martinez@clincierge.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc --noEmit false --outDir build && yarn copy-files",
    "copy-files": "cp -r src/config/*.json ./build/src/config && find src/db/migrations -name '*.js' -exec cp '{}' './build/src/db/migrations' ';'",
    "start": "node --es-module-specifier-resolution=node ./build/index.js",
    "dev": "NODE_ENV=\"development\" nodemon index.ts",
    "docker": "COMPOSE_PROJECT_NAME=inversify-template docker-compose up",
    "docker-rebuild": "docker container stop inversify-template_backend_1 inversify-template_pgadmin_1 inversify-template-db; docker system prune && docker volume prune -f --filter \"label=com.docker.compose.project=inversify-template\" && COMPOSE_PROJECT_NAME=inversify-template docker-compose up --force-recreate --build",
    "create-migration": "NODE_OPTIONS=\"--loader=ts-node/esm --es-module-specifier-resolution=node --trace-warnings --no-warnings\" knex migrate:make --migrations-directory --migrations-directory src/db/migrations -x ts",
    "migrate": "NODE_OPTIONS=\"--loader=ts-node/esm --es-module-specifier-resolution=node --trace-warnings --no-warnings\" knex migrate:latest --knexfile src/db/knexFile.ts",
    "migrate-down": "NODE_OPTIONS=\"--loader=ts-node/esm --es-module-specifier-resolution=node --trace-warnings --no-warnings\" knex migrate:down --knexfile src/db/knexFile.ts"
  },
  "dependencies": {
    "convict": "^6.2.3",
    "express": "^4.18.1",
    "inversify": "^6.0.1",
    "joi": "^17.6.0",
    "knex": "^2.2.0",
    "lodash-es": "^4.17.21",
    "objection": "^3.0.1",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/convict": "^6.1.1",
    "@types/express": "^4.17.13",
    "@types/inversify": "^2.0.33",
    "@types/knex": "^0.16.1",
    "@types/lodash-es": "^4.17.6",
    "@types/mocha": "^9.1.1",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "chai": "^4.3.6",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.2.9",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.6.2",
    "prettier-eslint": "^15.0.1",
    "sinon": "^14.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "packageManager": "yarn@3.3.1"
}
